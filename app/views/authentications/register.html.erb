<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <title>Register</title>
  </head>
  <body>
    <div class="center">
      <form method="POST" class="form">
        <div class="formTitle">
          Register
        </div>
        <div class="formComponent">
            <div class="formInputRegister">
                <input type="email" name="email" id="email" placeholder="E-mail..." required>
                <input type="password" class="pass" name="password" id="password" placeholder="Password..." required>
            </div>
            <div class="formInputRegister">
                <input type="text" name="name" id="name" placeholder="Prénom..." required>
                <input type="text" name="firstname" id="firstname" placeholder="Nom de famille..." required>
            </div>
            <div class="formInputRegister">
                <input type="date" name="birtday" id="birtday" required>
                <input type="tel" name="tel" id="tel" placeholder="Numéro de téléphone..." required>
            </div>
        </div>
        <br><br>
        <div class="formBtn">
          <input type="submit" value="Se connecter">
          <a href="/login" class="abtn">J'ai déjà un compte</a>
        </div>
      </form>
    </div>
  </body>
</html>
